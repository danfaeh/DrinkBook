


 
 
 





<table class = "table">
   <caption><h1> <%= current_user.username%>'s Recipes :</h1></caption>
   
   <thead>
      <tr>
         <th>name</th>
         <th>description</th>
      </tr>
   </thead>
   
   <tbody>
     <% @recipes.each do |recipe| %>
      <tr>
         <td><a href="/recipes/<%= recipe.id %>"><%= recipe.name %></a></td>
         <td><%= recipe.description %></td>
      </tr>
       <% end %>
   </tbody>
	
</table>

<br><br>
<button class="new_recipe" onclick="window.location.href='/recipes/new';">Create New Recipe</button>